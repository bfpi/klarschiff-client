<div id="observations-form" class="area-container">
  <%= form_for(:areas, method: :get, remote: true, html: { id: 'areas-form' }) do |f| %>
    <div class="row form-group">
      <div class="col-md-12">
        <%= t(".#{ @context }") %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="btn-group btn-group-justified">
          <%= link_to t('buttons.cancel'), [:areas, cancel: true, context: @context], remote: true, class: 'btn btn-default' %>
          <%= link_to t('buttons.resume'), 'javascript:;', id: 'areas-form-submit', remote: true, class: 'btn btn-primary', data: { context: @context } %>
        </div>
      </div>
    </div>
  <% end -%>
</div>
