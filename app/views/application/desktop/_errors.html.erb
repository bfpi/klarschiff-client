<div class="errors">
  <% if @errors.present? -%>
    <div class="row">
      <div class="col-md-12">
        <div class="alert alert-danger" role="alert">
          <strong><%= t("#{ controller_name }.desktop.create.error") %></strong>
          <ul>
            <% @errors.each do |error| -%>
              <% if messages = error[:base] -%>
                <% messages.each do |msg| -%>
                  </li><%= msg.html_safe %></li>
                <% end -%>
              <% end -%>
            <% end -%>
          </ul>
        </div>
      </div>
    </div>
  <% end -%>
</div>
