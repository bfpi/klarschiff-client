<div class="vote">
  <div class="card">
    <div class="card-header">
      <%= t('.title') %>
    </div>
    <div class="card-body">
      <%= form_for([:request, @vote], remote: true) do |f| %>
        <%= hidden_field_tag :mobile, @mobile %>
        <div class="row spacer">
          <div class="col-12"><%= t('.hint.text') %></div>
          <div class="col-12"><em class="text-danger"><%= t('.hint.warning_html') %></em></div>
        </div>
        <div class="row spacer">
          <div class="col-12">
            <div class="has-clear">
              <div class="input-group">
                <span class="input-group-text">@</span>
                <%= f.email_field(:author, class: 'form-control', placeholder: t('placeholder.email')) %>
                <i class="far fa-times-circle form-control-clear"></i>
              </div>
            </div>
          </div>
        </div>
        <% if display?(:status_updates_for_supporter) -%>
          <div class="row spacer">
            <div class="col-12">
              <%= f.check_box :status_updates_for_supporter, {}, true, nil %>
              <%= f.label :status_updates_for_supporter, class: 'col-form-label' %>
            </div>
          </div>
        <% end -%>
        <% if display?(:privacy_policy) -%>
          <%= render partial: 'privacy_policy_form', locals: { form: f } %>
        <% else -%>
          <div class="row spacer">
            <span class="helper-block">
              <%= t('.hint.privacy_html') %>
            </span>
          </div>
        <% end -%>
        <div class="col-12">
          <div class="btn-group d-flex col-12" role="group">
            <%= f.submit(t('buttons.submit'), class: 'btn btn-primary col-6') %>
            <%= link_to(t('buttons.cancel'), [@request, id_list: @id_list, mobile: @mobile], remote: true, class: 'btn btn-light btn-outline-secondary col-6', role: :button) %>
          </div>
          <% @id_list.each do |idl| -%>
            <%= f.hidden_field "id_list][", :value => idl, id: nil %>
          <% end if @id_list -%>
        </div>
        <% end -%>
    </div>
  </div>
</div>
