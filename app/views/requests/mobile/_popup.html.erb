<div class="row">
  <h4>
    <div class="col-12">
      <%= @request.service %>
    </div>
  </h4>
  <div class="col-12">
    <%= link_to('#', id: 'open-request', data: { url: request_path(@request.id, mobile: @mobile)}) do %>
      <i class="fas fa-eye"></i>
    <% end -%>

    <% type = t(@request.service.type, scope: 'service.types', count: 1) %>
    <%= type %>
    #<%= @request.id %>
  </div>
</div>
<div class="row">
  <div class="col-12"><%= status(@request, show_currently: false) %></div>
</div>
<% if (description = @request.description).present? -%>
  <div class="row">
    <div class="col-12"><em><%= truncate(description, length: 40).html_safe %></em></div>
  </div>
<% end -%>
