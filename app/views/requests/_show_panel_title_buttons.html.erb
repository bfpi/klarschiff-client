<div class="right-badges pull-right">
<span class="badge pull-right clickable" data-target="<%= request_path(request, id_list: id_list) %>">
  <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
</span>

<span class="badge pull-right clickable" data-target="<%= edit_request_path(request, id_list: id_list) %>">
  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
</span>

<% if request.job_status -%>
  <div class="btn-group pull-right">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
      <span class="glyphicon glyphicon-flag <%= request.flag_color_class %>" aria-hidden="true"></span>
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li>
        <%= link_to request_path(request, 'request[job_status]': 'CHECKED'), method: :put, remote: true do %>
            <span class="glyphicon glyphicon-flag job-status checked" aria-hidden="true"></span> abgehakt
        <% end %>
      </li>
      <li>
        <%= link_to request_path(request, 'request[job_status]': 'UNCHECKED'), method: :put, remote: true do %>
            <span class="glyphicon glyphicon-flag job-status unchecked" aria-hidden="true"></span> nicht abgehakt
        <% end %>
      </li>
      <li>
        <%= link_to request_path(request, 'request[job_status]': 'NOT_CHECKABLE'), method: :put, remote: true do %>
            <span class="glyphicon glyphicon-flag job-status not-checkable" aria-hidden="true"></span> nicht abarbeitbar
        <% end %>
      </li>
    </ul>
  </div>
<% end -%>
</div>