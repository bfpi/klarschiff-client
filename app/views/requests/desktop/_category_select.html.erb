<div id="type-select">
  <div id="request-category-1" class="row category">
    <div class="col-12">
      <%= select_tag(:request_category, categories(type, category), id: :request_category_1,
                     class: 'form-select', data: { update: :request_service_code_1 }) %>
    </div>
    <div class="col-12">
      <%= select_tag(:request_service_code, services(category, service_code), id: :request_service_code_1,
                   class: 'form-select', name: 'request[service_code][]',
                   data: { src: services_path(type: type),
                           placeholder: t('placeholder.select.service'),
                           'missing-message': t('requests.create.error.required.category') }) %>
    </div>
    <% if multi_requests_enabled? -%>
      <div class="col-12">
        <div class="btn-group d-flex col-12" role="group">
          <a href="#request-category-2" class="btn btn-light btn-outline-secondary" role="button" data-action="show">
            <i class="fas fa-plus"></i>
          </a>
        </div>
      </div>
    <% end -%>
  </div>
  <% if multi_requests_enabled? -%>
    <div id="request-category-2" class="row category hidden">
      <div class="col-12">
        <%= select_tag(:request_category, categories(type), id: :request_category_2,
                       class: 'form-select', data: { update: :request_service_code_2 }) %>
      </div>
      <div class="col-12">
        <%= select_tag(:request_service_code, services(), id: :request_service_code_2,
                     class: 'form-select', name: 'request[service_code][]',
                     data: { src: services_path(type: type),
                             placeholder: t('placeholder.select.service') }) %>
      </div>
      <div class="col-12">
        <div class="btn-group d-flex col-12" role="group">
          <a href="#request-category-3" class="btn btn-light btn-outline-secondary" role="button" data-action="show">
            <i class="fas fa-plus"></i>
          </a>
          <a href="#request-category-2" class="btn btn-light btn-outline-secondary" role="button" data-action="hide">
            <i class="fas fa-minus"></i>
          </a>
        </div>
      </div>
    </div>
    <div id="request-category-3" class="row category hidden">
      <div class="col-12">
        <%= select_tag(:request_category, categories(type), id: :request_category_3,
                       class: 'form-select', data: { update: :request_service_code_3 }) %>
      </div>
      <div class="col-12">
        <%= select_tag(:request_service_code, services(), id: :request_service_code_3,
                     class: 'form-select', name: 'request[service_code][]',
                     data: { src: services_path(type: type),
                             placeholder: t('placeholder.select.service') }) %>
      </div>
      <div class="col-12">
        <div class="btn-group d-flex col-12" role="group">
          <a href="#request-category-3" class="btn btn-light btn-outline-secondary" role="button" data-action="hide">
            <i class="fas fa-minus"></i>
          </a>
        </div>
      </div>
    </div>
  <% end -%>
</div>
