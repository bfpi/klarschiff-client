<div class="request-header">
  <div class="row mb-3">
    <div class="col-10">
      <h4>
        <%= @request.service %>
      </h4>
    </div>
    <div class="col-2">
      <%= link_to [:requests, back: true], class: 'back', data: { type: 'script', remote: true }, title: t('buttons.close') do %>
        <i class="fas fa-times"></i>
      <% end -%>
    </div>
    <div class="col-8">
      <% type = t(@request.service.type, scope: 'service.types', count: 1) %>
      <%= type %>
      #<%= @request.id %>
      <%= label_photo_required ||= mark_photo_required(@request) %>
      <% if display?(:trust) -%>
        <%= mark_trust(@request) %>
      <% end -%>
      <b>
        <%= link_to [:map, request: @request.id], title: t('buttons.perma_link', req_id: @request.id),
          data: { turbolinks: false } do %>
          <i class="fas fa-link"></i>
        <% end -%>
      </b>
    </div>
    <div class="col-4">
      <%= l(@request.requested_datetime.to_date) %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="shariff" data-button-style="icon"
           data-title="<%= Settings::Client.name %> #<%= @request.id %> <%= @request.service %>"
           data-url="<%= URI.join(Settings::Url.ks_server_url, url_for([:map, request: @request.id])) %>"
           data-services="['facebook', 'twitter', 'whatsapp', 'xing', 'linkedin', 'pinterest', 'googleplus', 'diaspora']"></div>
    </div>
  </div>
</div>
